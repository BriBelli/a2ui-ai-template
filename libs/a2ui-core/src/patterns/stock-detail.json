{
  "name": "stock-detail",
  "description": "Stock / financial instrument detail view with stat, chart, and metrics",
  "match": ["stock", "share", "ticker", "financial", "earnings", "market cap"],
  "template": {
    "version": "1.0",
    "components": [
      {
        "id": "stock-stat",
        "type": "stat",
        "props": {
          "label": "{{ticker}}",
          "value": "{{price}}",
          "trend": "{{change}}",
          "description": "{{company}} Â· {{sector}}"
        }
      },
      {
        "id": "price-chart",
        "type": "chart",
        "props": {
          "chartType": "line",
          "title": "{{ticker}} Price",
          "data": { "labels": "{{priceLabels}}", "datasets": "{{priceDatasets}}" },
          "options": { "fillArea": true, "currency": "USD", "referenceLine": "{{previousClose}}", "referenceLabel": "Previous close" }
        }
      },
      {
        "id": "metrics-table",
        "type": "data-table",
        "props": {
          "columns": [
            { "key": "metric", "label": "Metric" },
            { "key": "value", "label": "Value", "align": "right" }
          ],
          "data": "{{metricsRows}}"
        }
      },
      {
        "id": "disclaimer",
        "type": "alert",
        "props": {
          "variant": "info",
          "title": "Data Source",
          "description": "Prices may be delayed. Data from web search."
        }
      }
    ]
  }
}
