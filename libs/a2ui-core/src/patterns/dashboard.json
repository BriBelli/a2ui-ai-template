{
  "name": "dashboard",
  "description": "Metrics dashboard with KPI cards, chart, and detail table",
  "match": ["dashboard", "overview", "summary", "metrics", "kpi"],
  "template": {
    "version": "1.0",
    "components": [
      {
        "id": "root",
        "type": "container",
        "props": { "layout": "vertical", "gap": "md" },
        "children": [
          {
            "id": "kpis",
            "type": "grid",
            "props": { "columns": 4, "gap": "md" },
            "children": [
              {
                "id": "kpi-1",
                "type": "card",
                "props": {},
                "children": [
                  { "id": "kpi-1-value", "type": "text", "props": { "content": "{{kpi1Value}}", "variant": "h2" } },
                  { "id": "kpi-1-label", "type": "text", "props": { "content": "{{kpi1Label}}", "variant": "caption" } }
                ]
              },
              {
                "id": "kpi-2",
                "type": "card",
                "props": {},
                "children": [
                  { "id": "kpi-2-value", "type": "text", "props": { "content": "{{kpi2Value}}", "variant": "h2" } },
                  { "id": "kpi-2-label", "type": "text", "props": { "content": "{{kpi2Label}}", "variant": "caption" } }
                ]
              },
              {
                "id": "kpi-3",
                "type": "card",
                "props": {},
                "children": [
                  { "id": "kpi-3-value", "type": "text", "props": { "content": "{{kpi3Value}}", "variant": "h2" } },
                  { "id": "kpi-3-label", "type": "text", "props": { "content": "{{kpi3Label}}", "variant": "caption" } }
                ]
              },
              {
                "id": "kpi-4",
                "type": "card",
                "props": {},
                "children": [
                  { "id": "kpi-4-value", "type": "text", "props": { "content": "{{kpi4Value}}", "variant": "h2" } },
                  { "id": "kpi-4-label", "type": "text", "props": { "content": "{{kpi4Label}}", "variant": "caption" } }
                ]
              }
            ]
          },
          {
            "id": "main-chart",
            "type": "chart",
            "props": {
              "chartType": "{{chartType}}",
              "title": "{{chartTitle}}",
              "data": "{{chartData}}"
            }
          },
          {
            "id": "detail-table",
            "type": "data-table",
            "props": {
              "columns": "{{tableColumns}}",
              "data": "{{tableRows}}"
            }
          }
        ]
      }
    ]
  }
}
